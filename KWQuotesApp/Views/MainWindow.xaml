<Window x:Class="KWQuotesApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" MinHeight="500" MinWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="5 0"
                Command="{Binding NavigateCommand}" CommandParameter="QuotesPull">Pull</Button>
            <Button Grid.Column="1" Margin="5 0"
                Command="{Binding NavigateCommand}" CommandParameter="QuoteAnalyse">Analyse</Button>
        </Grid>
        <ContentControl Grid.Row="1" Grid.Column="2" 
                        Margin="20"
                        prism:RegionManager.RegionName="ContentRegion1" />
    </Grid>
</Window>
